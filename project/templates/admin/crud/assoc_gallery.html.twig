{% if  attribute(entity.instance, field.property) is defined %}
    {% set gallery = attribute(entity.instance, field.property) %}
{% else %}
    {% set gallery = entity.instance.gallery %}
{% endif %}

{% if gallery is not iterable %}
    <img src="{{ vich_uploader_asset(gallery, 'imageFile') | imagine_filter_cache('thumbnail') }}"
         alt="{{ gallery.mimeType }}">
{% else %}
    {% for item in gallery %}
        {% if item.image is not null %}
            <img src="{{ vich_uploader_asset(item.image, 'imageFile') | imagine_filter_cache('thumbnail') }}"
                 alt="{{ item.image.mimeType }}">
        {% endif %}
    {% endfor %}
{% endif %}


